<body>


    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="logo" href="#"><%=image_tag("Bookizy.svg")%></a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#invite" class="scroll">Join the beta</a></li>
          </ul>
        </div><!--/.navbar-collapse -->
      </div>
    </div>


    <header>
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <a href="#"><%=image_tag("Bookizy.svg")%></a>
          </div>
          <div class="col-xs-6 signin text-right navbar-nav">
            <a href="#invite">Join the beta</a>
          </div>
        </div>

        <div class="row header-info">
          <div class="col-sm-10 col-sm-offset-1 text-center">
            <br />
            <h1 class="wow fadeIn">The fastest way to catch up with friends</h1>
            <br />
            <p class="lead wow fadeIn" data-wow-delay="0.5s"></p>
            <br />

            <div class="row">
              <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                <div class="row">
                  <div class="col-xs-6 text-right wow fadeInUp" data-wow-delay="1s">
                    <a href="#be-the-first" class="btn btn-secondary btn-lg scroll">Learn More</a>
                  </div>
                  <div class="col-xs-6 text-left wow fadeInUp" data-wow-delay="1.4s">
                    <a href="#invite" class="btn btn-primary btn-lg scroll">Request Invite</a>
                  </div>
                </div><!--End Button Row-->
              </div>
            </div>

          </div>
        </div>
      </div>

    </header>


    <div class="mouse-icon hidden-xs">
				<div class="scroll"></div>
			</div>

    <section id="be-the-first" class="pad-xl">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text-center margin-30 wow fadeIn" data-wow-delay="0.6s">
            <h2>Be the first</h2>
            <p class="lead">Try our new iPhone app.</p>
          </div>
        </div>

        <div class="iphone wow fadeInUp" data-wow-delay="1s">
          <%=image_tag("iphone.png")%>
        </div>
      </div>
    </section>

    <section id="main-info" class="pad-xl">
	    <div class="container">
		    <div class="row">
			    <div class="col-sm-4 wow fadeIn" data-wow-delay="0.4s">
				    <hr class="line purple">
				    <h3>Easy</h3>
				    <p>Just tap a button and invite friends to share an activity.</p>
			    </div>
			    <div class="col-sm-4 wow fadeIn" data-wow-delay="0.8s">
				    <hr  class="line blue">
				    <h3>Fast</h3>
				    <p>See who is joining and then you are ready to go!</p>
			    </div>
			    <div class="col-sm-4 wow fadeIn" data-wow-delay="1.2s">
				    <hr  class="line yellow">
				    <h3>Fun</h3>
				    <p>Create custom activities, groups, repeat them as many times as you like, and stay closer to your friends like never before!</p>
			    </div>
		    </div>
	    </div>
    </section>



    <section id="invite" class="pad-lg light-gray-bg">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text-center">
            <i class="fa fa-envelope-o margin-40"></i>
            <h2 class="black">Get the invite</h2>
            <br />
            <p class="black">We're looking for beta testers!</p>
            <br />

            <div class="row">
              <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

                  <div class="form-group">

                    <% unless @message %>
                      <h4 class="" style="margin-bottom: 40px;"><%= @metadata[:title] %></h4>

                      <%= form_tag("submit", method: "post", style: "text-align: left") do %>
                        <%= label_tag(:first_name, t(:first_name_label)) %>
                        <%= text_field_tag :first_name, '', class: "form-control", placeholder: t(:first_name_placeholder) %><br />
                        <%= label_tag(:last_name, t(:last_name_label)) %>
                        <%= text_field_tag :last_name, '', class: "form-control", placeholder: t(:last_name_placeholder) %><br />
                        <%= label_tag(:email, t(:email_label), class: "required") %>
                        <%= email_field_tag :email, '', class: "form-control", placeholder: t(:email_placeholder) %><br />

                        <% if ENV["ITC_TOKEN"] %>
                          <% if params[:token] %>
                            <%= hidden_field_tag :token, '', value: params[:token] %>
                          <% else %>
                            <%= label_tag(:token, t(:password_label)) %>
                            <%= text_field_tag :token, '', class: "form-control", placeholder: t(:password_placeholder) %><br />
                          <% end %>
                        <% end %>

                        <br />
                        <%= submit_tag t(:get_beta_access), class: 'btn btn-lg btn-primary btn-block', id: "submit" %>
                      <% end %>
                    <% else %>
                      <p class="alert alert-<%= @type %>">
                        <%= @message %>
                      </p>
                    <% end %>


                  </div>


              </div>
            </div><!--End Form row-->

          </div>
        </div>
      </div>
    </section>

    <footer>
      <div class="container">

        <div class="row">
          <div class="col-sm-8 margin-20">

          </div>

          <div class="col-sm-4 text-right">
            <p><small>Copyright &copy; 2016. All rights reserved.
          </div>
        </div>

      </div>
    </footer>


    <!-- Javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/jquery-1.11.0.min.js"><\/script>')</script>


    <%= javascript_include_tag('wow.min.js') %>
    <%= javascript_include_tag('bootstrap.min.js') %>
    <%= javascript_include_tag('main.js') %>


    </body>
